@model PRN231_Group7.Assignment2.UI.Models.Authentication.RegisterModel;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var publishers = ViewBag.Publishers;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h1 class="my-3 text-center">Register</h1>

            <form method="post">
                <div class="row mb-3">
                    <label class="form-label col-sm-4">EmailAddress</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="EmailAddress" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">Password</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">FirstName</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">LastName</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">Phone</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Phone"/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">Source</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" asp-for="Source" />
                        <span asp-validation-for="Source" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">HireDate</label>
                    <div class="col-sm-8">
                        <input type="datetime-local" class="form-control" asp-for="HireDate" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="form-label col-sm-4">Publisher</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="PublisherId" id="publisherSelect">
                            <option value="">Select Publisher</option>
                            @foreach (var publisher in publishers)
                            {
                                <option value="@publisher.Id">@publisher.PublisherName</option>
                            }
                        </select>
                        <span asp-validation-for="PublisherId" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="form-label col-sm-4"></label>
                    <div class="row col-sm-8 m-0">
                        <button type="submit" class="btn btn-secondary">Register</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

