@model PRN231_Group7.Assignment2.UI.Models.Book.UpdateBookRequestModel


@{
    var publishers = ViewBag.Publishers;
}

@if (Model is not null)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h1 class="mt-3 mb-5 text-center ">Update Book</h1>

                <form method="post">
                    <input type="hidden" class="form-control" asp-for="Id" />

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Title</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Type</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Type" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Price</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Advance</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Advance" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Royalty</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Royalty" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">YTD Sales</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="YtdSales" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Notes</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Notes" />
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label class="form-label col-sm-4" for="publishedDate">Published Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" asp-for="PublishedDate">
                            <span asp-validation-for="PublishedDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Publisher</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="PublisherId" id="publisherSelect">
                                <option value="">Select Publisher</option>
                                @foreach (var publisher in publishers)
                                {
                                    <option value="@publisher.Id">@publisher.PublisherName</option>
                                }
                            </select>
                            <span asp-validation-for="PublisherId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4"></label>
                        <div class="row col-sm-8 m-0 justify-content-between">
                            <button type="submit" class="btn btn-secondary col-sm-5">Save</button>
                            <a href="/Books/Index" class="btn btn-secondary col-sm-5">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
