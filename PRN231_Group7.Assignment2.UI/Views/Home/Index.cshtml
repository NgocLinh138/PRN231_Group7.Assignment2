@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

    <title>Login</title>
</head>
<body>


    <section class="text-center">
        <div class="container">
            <h1>Welcome to Bookstore</h1>

            <form method="get" action="@Url.Action("Index", "Books")" class="my-5 book-search-form">
                <label for="searchValue">Search by title:</label>
                <div class="row mt-2">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="searchValue" name="searchValue" placeholder="Enter title..." value="@ViewBag.SearchValue">
                    </div>
                    <div class="form-group col-md-6 p-0">
                        <input type="submit" class="btn btn-secondary" value="Search" />
                    </div>
                </div>
            </form>



        </div>
    </section>




    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>