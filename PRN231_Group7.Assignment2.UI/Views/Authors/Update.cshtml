@model PRN231_Group7.Assignment2.UI.Models.Author.AuthorRequestModel.UpdateAuthor
@{
    ViewData["Title"] = "Update Author";
}


@if (Model is not null)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h1 class="mt-3 mb-5 text-center">Update Author</h1>

                <form method="post">
                    <input type="hidden" class="form-control" asp-for="Id" />

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Email Address</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="EmailAddress" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">First Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Last Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Phone</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Phone" onkeypress="return isNumberKey(event)" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Address</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">City</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="City" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">State</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="State" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Zip</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Zip" />
                            <span asp-validation-for="Zip" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4"></label>
                        <div class="row col-sm-8 m-0 justify-content-between">
                            <button type="submit" class="btn btn-secondary col-sm-5">Save</button>
                            <a href="/Authors/Index" class="btn btn-secondary col-sm-5">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
}


<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>

