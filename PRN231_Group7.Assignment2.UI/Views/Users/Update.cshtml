@model PRN231_Group7.Assignment2.UI.Models.User.UserRequestModel.UpdateUser

@{
    ViewData["Title"] = "Update User";
    var roles = ViewBag.Roles;
}


@if (Model is not null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h1 class="my-3 text-center">Update User</h1>

                <form method="post">
                    <input type="hidden" class="form-control" asp-for="Id" />

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Email Address</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" asp-for="EmailAddress" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">First Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="FirstName" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Last Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="LastName" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Phone</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" asp-for="Phone" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" asp-for="Password" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Source</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Source" />
                        </div>
                    </div>
@* 
                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Role</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="RoleId" />
                        </div>
                    </div>
 *@@* 
                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Role</label>
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="RoleId" id="roleSelect">
                                <option value="">Select role</option>
                                @foreach (var role in roles)
                                {
                                    <option value="@role.Id">@role.RoleName</option>
                                }
                            </select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                    </div>
 *@
                    <div class="row mb-3">
                        <label class="form-label col-sm-4" for="publishedDate">Hire Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" asp-for="HireDate">
                        </div>
                    </div>

                    <div class="row mb-3 d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
}


<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>

