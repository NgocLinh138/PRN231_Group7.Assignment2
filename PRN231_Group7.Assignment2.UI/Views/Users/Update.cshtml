@model PRN231_Group7.Assignment2.UI.Models.User.UserRequestModel.UpdateUser

@{
    ViewData["Title"] = "Update User";
    var roles = ViewBag.Roles;
}


@if (Model is not null)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h1 class="mt-3 mb-5 text-center">Update User</h1>

                <form method="post">
                    <input type="hidden" class="form-control" asp-for="Id" />

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Email Address</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" asp-for="EmailAddress" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">First Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Last Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Phone</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4">Source</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="Source" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="form-label col-sm-4" for="publishedDate">Hire Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" asp-for="HireDate">
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label class="form-label col-sm-4"></label>
                        <div class="row col-sm-8 m-0 justify-content-between">
                            <button type="submit" class="btn btn-secondary col-sm-5">Save</button>
                            <a href="/Users/Index" class="btn btn-secondary col-sm-5">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
}


<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>

